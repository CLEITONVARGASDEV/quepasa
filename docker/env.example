# QuePasa Docker Environment Variables Example
# Copy this file to .env and fill in your values

# Database Configuration
DBDRIVER=postgres
DBHOST=postgres
DBDATABASE=quepasa
DBPORT=5432
DBUSER=quepasa
DBPASSWORD=your_password_here
DBSSLMODE=disable

# Security
SIGNING_SECRET=your_signing_secret_here
MASTERKEY=your_master_key_here

# Web API Configuration
WEBAPIPORT=8080
WEBAPIHOST=0.0.0.0

# WebSocket Configuration
WEBSOCKETSSL=false

# Application Settings
MIGRATIONS=true
APP_TITLE=QuePasa
REMOVEDIGIT9=false
SYNOPSISLENGTH=50
CACHELENGTH=0
CACHEDAYS=0

# Audio Processing
CONVERT_WAVE_TO_OGG=true
COMPATIBLE_MIME_AS_AUDIO=true

# WhatsApp Features
READUPDATE=false
READRECEIPTS=false
CALLS=false
GROUPS=false
BROADCASTS=false
HISTORYSYNCDAYS=
PRESENCE=
DISPATCHUNHANDLED=false

# Logging
LOGLEVEL=info
HTTPLOGS=false
WHATSMEOW_LOGLEVEL=
WHATSMEOW_DBLOGLEVEL=

# Account Management
ACCOUNTSETUP=true

# Development
TESTING=false

# RabbitMQ Configuration
RABBITMQ_QUEUE=
RABBITMQ_CONNECTIONSTRING=
RABBITMQ_CACHELENGTH=0
